<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MUFU</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FrontEnd.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.plyr.io/3.7.8/plyr.css" />
    @* <link rel="icon" type="image/svg+xml" href="~/Assets/Favicon.svg"> *@
    @* <link rel="icon" type="image/png" sizes="32x32" href="/Assets/Artboard 1.png"> *@
    <link rel="icon" type="image/png" href="~/Assets/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="~/Assets/favicon.svg" />
    <link rel="shortcut icon" href="~/Assets/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="~/Assets/apple-touch-icon.png" />
    <meta name="apple-mobile-web-app-title" content="Mufu's Portfolio" />
    <link rel="manifest" href="~/Assets/site.webmanifest" />
</head>
<body>
    <div id="loader-wrapper">
        <div class="loader-content">
            <h2 class="space-mono-regular green">Loading...</h2>
            <div class="loader-spinner"></div>
        </div>
    </div>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-center">
                    <ul class="navbar-nav flex-grow-1 justify-content-center">
                        <li class="nav-item">
                            <a class="nav-link space-mono-regular" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item space-mono-regular">
                            <a class="nav-link space-mono-regular" asp-area="" asp-controller="Project" asp-action="Index">Projects</a>
                        </li>
                        <li class="nav-item space-mono-regular">
                            <a class="nav-link space-mono-regular" asp-area="" asp-controller="Gallery" asp-action="Index">Gallery</a>
                        </li>
                        <li class="nav-item space-mono-regular">
                            <a class="nav-link space-mono-regular" asp-area="" asp-controller="Subscribe" asp-action="Signup">Subscribe</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; 2025 - FrontEnd - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://unpkg.com/lenis@1.3.4/dist/lenis.min.js"></script>
    <script src="https://cdn.plyr.io/3.7.8/plyr.polyfilled.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", () => {
          const lenis = new Lenis({
            duration: 1.2,
            easing: (t) => Math.min(1, 1.001 - Math.pow(2, -10 * t)),
            smooth: true,
            smoothTouch: true
          });
          function raf(time) {
            lenis.raf(time);
            requestAnimationFrame(raf);
          }
          requestAnimationFrame(raf);
        });

             window.addEventListener("load", () => {
            const loader = document.getElementById("loader-wrapper");
            loader.classList.add("fade-out");
        });

            document.addEventListener("DOMContentLoaded", () => {
            const loader = document.getElementById("loader-wrapper");

            // Intercept all internal navigation links
            const links = document.querySelectorAll('a[href]:not([target="_blank"]):not([href^="#"])');
            links.forEach(link => {
                link.addEventListener("click", (e) => {
                    const href = link.getAttribute("href");

                    // Ignore external or JS links
                    if (href && !href.startsWith("http") && !href.startsWith("javascript:")) {
                        e.preventDefault(); // Stop default navigation
                        loader.classList.remove("fade-out"); // Show loader
                        loader.style.visibility = "visible";
                        loader.style.opacity = "1";

                        setTimeout(() => {
                            window.location.href = href;
                        }, 300); // Delay to let the fade-in play
                    }
                });
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
