@{
}
@{
	ViewData["Title"] = "Photography - Admin";
}

@model FrontEnd.Models.PhotographyAdminViewModel

<section class="container my-5">
	<div id="blur-background" class="blur-bg"></div>
	<div class="background-anim-container">
		<!-- Shapes will be generated dynamically via JS -->
	</div>
	<a class="space-mono-regular green" asp-controller="Admin" asp-action="Index">Return</a>
	<h1 class="text-center mb-4 dm-sans text-white">PHOTOGRAPHY CRUD</h1>

	<!-- Create Button -->
	<div class="text-end mb-3">
		<button class="btn btn-success" onclick="openModal('createModal')">Add new Photo</button>
	</div>

	<!-- Photos Table -->
	<div class="scrollable-table frosted-box border p-3" data-lenis-prevent>
		<table class="table mb-0">
			<thead class="table-dark space-mono-regular green text-center table-borderless">
				<tr>
					<th>Id</th>
					<th>Title</th>
					<th>ImageUrl</th>
					<th>CreatedAt</th>
					<th>U-D</th>
				</tr>
			</thead>
			<tbody class="text-center text-white">
				@foreach (var photo in Model.AllPhotos)
				{
					<tr>
						<td>@photo.Id</td>
						<td>@photo.Title</td>
						<td><img src="@photo.ImageUrl" alt="@photo.Title" width="100" /></td>
						<td>@photo.CreatedAt?.ToString("yyyy-MM-dd")</td>
						<td>
							<button class="btn btn-primary btn-sm" onclick="openEditPhotoModal(@photo.Id)">Edit</button>
							<button class="btn btn-danger btn-sm" onclick="openDeletePhotoModal(@photo.Id)">Delete</button>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</section>

<!-- Modals -->
<div id="createModal" class="modal" tabindex="-1">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title dm-sans text-white">Add Photo</h5>
				<button type="button" class="btn-close" onclick="closeModal('createModal')"></button>
			</div>
			<div class="modal-body">
				<form asp-action="CreatePhoto" method="post" enctype="multipart/form-data">
					<!-- Title -->
					<div class="mb-3">
						<label asp-for="Photo.Title" class="form-label space-mono-regular green"></label>
						<input asp-for="Photo.Title" class="form-control" />
						<span asp-validation-for="Photo.Title" class="text-danger"></span>
					</div>

					<!-- Photo URL -->
					<div class="mb-3 position-relative">
						<label class="form-label space-mono-regular green">Project Image</label>
						<input asp-for="Photo.ImageUrl" class="form-control" id="imageUrlInput" autocomplete="off" />
						<div id="imageDropdown" class="dropdown-menu w-100" style="max-height: 200px; overflow-y: auto;" data-lenis-prevent>
							@foreach (var media in Model.MediaList)
							{
								<a class="dropdown-item d-flex align-items-center" href="#" onclick="selectImage('@media.Url')">
									<img src="@media.Url" alt="@media.Title" class="me-2 rounded" style="width: 40px; height: 40px; object-fit: cover;" />
									<span>@media.Title</span>
								</a>
							}
						</div>
						<img id="imagePreview" class="mt-2 rounded shadow" style="max-width: 200px; display: none;" />
					</div>

					<!-- Date time -->
					<div class="mb-3">
						<label asp-for="Photo.CreatedAt" class="form-label space-mono-regular green"></label>
						<input asp-for="Photo.CreatedAt" class="form-control" />
						<span asp-validation-for="Photo.CreatedAt" class="text-danger"></span>
					</div>

					<!-- Submit -->
					<div class="text-center">
						<button type="submit" class="btn btn-success">Create</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

<div id="EditModal" class="modal" tabindex="-1">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title dm-sans text-white">Edit Photo</h5>
				<button type="button" class="btn-close" onclick="closeModal('EditModal')"></button>
			</div>
			<div class="modal-body">
				<form asp-action="EditPhoto" asp-controller="Admin" method="post" enctype="multipart/form-data">
					<input type="hidden" id="EditPhotoId" name="id" />
					<!-- Title -->
					<div class="mb-3">
						<label asp-for="Photo.Title" class="form-label space-mono-regular green"></label>
						<input asp-for="Photo.Title" class="form-control" />
						<span asp-validation-for="Photo.Title" class="text-danger"></span>
					</div>

					<!-- Photo URL -->
					<div class="mb-3">
						<label asp-for="Photo.ImageUrl" class="form-label space-mono-regular green"></label>
						<input asp-for="Photo.ImageUrl" class="form-control" />
						<span asp-validation-for="Photo.ImageUrl" class="text-danger"></span>
					</div>

					<!-- Date time -->
					<div class="mb-3">
						<label asp-for="Photo.CreatedAt" class="form-label space-mono-regular green"></label>
						<input asp-for="Photo.CreatedAt" class="form-control" />
						<span asp-validation-for="Photo.CreatedAt" class="text-danger"></span>
					</div>

					<!-- Submit -->
					<div class="text-center">
						<button type="submit" class="btn btn-success">Update</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

<div id="deleteModal" class="modal" tabindex="-1">
	<div class="modal-dialog">
		<div class="modal-content">
			<form id="deleteForm" asp-action="DeletePhoto" method="post">
				<div class="modal-header">
					<h5 class="modal-title dm-sans text-white">Delete Photo</h5>
					<button type="button" class="btn-close" onclick="closeModal('deleteModal')"></button>
				</div>
				<div class="modal-body">
					<input type="hidden" id="deletePhotoId" name="id" />
					<p class="space-mono-regular green">Are you sure you want to delete this photo?</p>
				</div>
				<div class="modal-footer">
					<button type="submit" class="btn btn-danger">Delete</button>
					<button type="button" class="btn btn-secondary" onclick="closeModal('deleteModal')">Cancel</button>
				</div>
			</form>
		</div>
	</div>
</div>

<script>
	const input = document.getElementById("imageUrlInput");
	const dropdown = document.getElementById("imageDropdown");
	const preview = document.getElementById("imagePreview");

	input.addEventListener("focus", () => {
		dropdown.classList.add("show");
	});

	input.addEventListener("blur", () => {
		// Delay hide to allow click event to register
		setTimeout(() => dropdown.classList.remove("show"), 200);
	});

	function selectImage(url) {
		input.value = url;
		preview.src = url;
		preview.style.display = "block";
		dropdown.classList.remove("show");
	}
</script>