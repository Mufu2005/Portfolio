@{
}

@model FrontEnd.Models.SubscriptionModel

@{
    ViewData["Title"] = "Subscribe";
}

<section class="container my-5">
    <a class="space-mono-regular green" asp-controller="Home" asp-action="Index">Return</a>
    <div class="text-center mb-5">
        <h1 class="dm-sans text-white text-uppercase">Stay Updated</h1>
        <p class="space-mono-regular green">Subscribe to receive the latest updates and announcements!</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="frosted-box border p-4 rounded shadow">
                <form asp-action="Signup" method="post" novalidate>
                    <div class="mb-3">
                        <label asp-for="name" class="form-label text-white">Name (Optional)</label>
                        <input asp-for="name" class="form-control" placeholder="Your Name" />
                        <span asp-validation-for="name" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label text-white">Email <span class="text-danger">*</span></label>
                        <input asp-for="Email" class="form-control" placeholder="example@email.com" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-success px-4">Subscribe</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>